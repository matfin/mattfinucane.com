/**
 *	Mixins
 */
.resetPaddingMargin {
	padding: 0;
	margin: 0;
}

.resetList {
	.resetPaddingMargin;
	list-style: none;
}

.resetButton {
	.resetPaddingMargin;
	background-color: transparent;
	text-align: left;
	border: none;
}

.backgroundGradient {
	background: url('data:image/png;base64,') repeat;
}

.echelon {
	&:before {
		content: "<";
	}
	&:after {
		content: ">"
	}
}

.animateWithProperties(@properties) {
	.transition-property(@properties);
	.transition-duration(@transitionDuration);
}