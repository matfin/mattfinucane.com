.job {

	.flex(1);

	@media @desktop {
		&:first-child {
			margin-left: @gridSpacing * 4;
			margin-right: @gridSpacing * 2;
		}
		&:last-child {
			margin-left: @gridSpacing * 2;
			margin-right: @gridSpacing * 4;
		}
	}

	@media @laptop {
		&:first-child {
			margin-left: @gridSpacing * 4;
			margin-right: @gridSpacing * 2;
		}
		&:last-child {
			margin-left: @gridSpacing * 2;
			margin-right: @gridSpacing * 4;
		}
	}

	@media @tablet {
		margin: @gridSpacing 12%;
	}

	@media @mobile {
		margin: @gridSpacing @gridSpacing * 2;
	}

	h1, h2 {
		font-size: @mediumFontSize - 1;
		text-align: center;

		@media @mobile {
			width: 75%;
			margin: 0 auto;
		}
	}

	.dates {
		font-style: italic;
		margin: @gridSpacing / 2 0;
		text-align: center;
	}

	.description {
		.display(flex);
		.flex-direction(column);

		@media @desktop {
			.flex-direction(row);
		}


		ul {
			.flex(4);
			font-size: @baseFontSize;
			line-height: @baseFontSize + 3;

			li {
				list-style: disc;
				margin: @gridSpacing / 2 0;

				@media @tablet {
					text-align: justify;
				}
				@media @mobile {
					text-align: justify;
				}

			}
		}

		.images {
			.flex(1);
			margin-top: @gridSpacing;
			.align-self(baseline);
			img {
				margin-right: @gridSpacing;
				.border-radius(@gridSpacing / 2);
			}

			@media @desktop {
				margin-top: 0;
				margin-left: @gridSpacing;
				img {
					margin-bottom: @gridSpacing;
				}
			}
		}
	}
}